@model IEnumerable<HassEntity>

<div>
   
    @if (Model.Any(x => x.State == "Open"))
    { 
        <h4 class="text-danger">Open:</h4>
        foreach (var door in Model)
        {
            if (door.State == "Open")
            {
                <h6>@door.Attributes.FriendlyName, Last update: @door.LastUpdated</h6>
            }
        }
    }

    @if (Model.Any(x => x.State == "Closed"))
    {
        <h4>Closed:</h4>
        foreach (var door in Model)
        {
            if (door.State == "Closed")
            {
                <h6>@door.Attributes.FriendlyName, Last update: @door.LastUpdated</h6>
            }
        }
    }
    @if (Model.Any(x => x.State == "Unknown"))
    {
        <h4 class="text-danger">Unknown:</h4>
        foreach (var door in Model)
        {
            if (door.State == "Unknown")
            {
                <h6>@door.Attributes.FriendlyName, Last update: @door.LastUpdated</h6>
            }

        }
    }

</div>